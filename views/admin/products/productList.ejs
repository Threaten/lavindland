<% layout('/admin/template') -%>
<title>Products List</title>
<div class="page-heading">
    <h3>
      <%= __('Products List') %>
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="/admin">Dashboard</a>
        </li>
        <li class="active"><%= __('Products List') %> </li>
    </ul>
</div>
<div class="wrapper">

<div class="row">
<div class="col-sm-12">
<section class="panel">
<header class="panel-heading">
    <%= __('List') %>
    <span class="tools pull-right">
        <a href="javascript:;" class="fa fa-chevron-down"></a>
        <a href="javascript:;" class="fa fa-times"></a>
     </span>
</header>
<div class="panel-body">
  <div class="clearfix">
      <div class="btn-group">
          <a href="/admin/addProduct" id="editable-sample_new" class="btn btn-primary">
              <%= __('Add new') %> <i class="fa fa-plus"></i>
          </a>
      </div>
    </div>
<div class="adv-table">
<table class="display table table-bordered" id="hidden-table-info2">
<thead>
<tr>
    <th><%= __('Project') %></th>
    <th><%= __('Apt. Code') %></th>
    <th class="hidden-phone"><%= __('Status') %></th>
    <th class="hidden-phone"><%= __('Sell Price') %></th>
    <th class="hidden-phone"><%= __('Rent Price') %></th>
    <th class="hidden-phone"><%= __('Edit') %></th>
    <th class="hidden-phone"><%= __('Delete') %></th>
    <th class="hidden-phone" style="display:none;">Rooms:</th>
    <th class="hidden-phone" style="display:none;">Area (m<sup>2</sup>): </th>
    <th class="hidden-phone" style="display:none;">Created At:</th>
    <th class="hidden-phone" style="display:none;">Updated At:</th>
    <th class="hidden-phone" style="display:none;">Notes:</th>
</tr>
</thead>
<tbody>
  <% for (var i = 0; i < products.length; i++) { %>
<tr class="gradeA">
    <td><%= products[i].project.name %></td>
    <td><%= products[i].code %></td>
    <td class="hidden-phone"><%= products[i].status %></td>
    <td class="hidden-phone"><%= products[i].sellPrice %></td>
    <td class="hidden-phone"><%= products[i].rentPrice %></td>
    <td class="center hidden-phone"><a href="/admin/editProduct/<%= products[i]._id %>"><%= __('Edit') %></a></td>
    <td class="center hidden-phone"><a href="/admin/deleteProduct/<%= products[i]._id %>"><%= __('Delete') %></a></td>
    <td class="center hidden-phone" style="display: none;"><%= products[i].rooms %></td>
    <td class="center hidden-phone" style="display: none;"><%= products[i].area %></td>
    <td class="center hidden-phone" style="display: none;"><%= products[i].createdAt %></td>
    <td class="center hidden-phone" style="display: none;"><%= products[i].updatedAt %></td>
    <th class="hidden-phone" style="display:none;"><%= products[i].note %></th>
</tr>
<% } %>
</tbody>
</table>

</div>
</div>
</section>
</div>
</div>
</div>
