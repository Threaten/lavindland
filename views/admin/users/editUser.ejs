<% layout('/admin/template') -%>
<title>Edit Staff</title>
<script type="text/javascript">

function updateText(type) {
 var id = type+'Text';
 document.getElementById(id).value = document.getElementById(type).value;
}
</script>
<div class="page-heading">
  <h3>
    <%= __('Edit Staff') %>
  </h3>
  <ul class="breadcrumb">
    <li>
      <a href="/admin">Dashboard</a>
    </li>
    <li>
      <a href="/admin/productList"><%= __('Users List') %></a>
    </li>
    <li class="active"> <%= __('Edit Staff') %> </li>
  </ul>
</div>
<div class="wrapper">
  <div class="row">
    <div class="col-lg-12">
      <section class="panel">
        <header class="panel-heading">
          <%= __('Edit Staff') %>
        </header>
        <div class="panel-body">
          <% if (msg.length > 0) { %>
            <div class="alert alert-success alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>

              <%= msg %>

            </div>
            <% } %>
            <% if (error.length > 0) { %>
              <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>

                <%= error %>

              </div>
              <% } %>
              <form method="post">
                <div class="form-group">
                  <label for="name"><%= __('Name') %></label>
                  <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" placeholder="Nguyen Van A,..." required="true">
                </div>
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" placeholder="youremail@example.com" required="true">
                </div>
                <div class="form-group">
                  <label for="address"><%= __('Address') %></label>
                  <input type="text" class="form-control" id="address" name="address" value="<%= user.address %>" placeholder="100 ABC Street..." required="true">
                <div class="form-group">
                  <label for="Phone"><%= __('Phone') %></label>
                  <input type="phone" class="form-control" id="phone" name="phone" value="<%= user.phone %>" placeholder="091xxxxxxx" required="true">
                </div>
                <div class="form-group">
                  <label for="password"><%= __('Password') %> <%= __('Default Password') %></label>
                  <input type="password" class="form-control" id="password" name="password" required="true">
                </div>
                <div class="form-group">
                  <label for="name"><%= __('Role') %></label>
                  <select class="form-control" data-style="btn-info" id="role" value="<%= user.role %>" name="role" onchange="updateText('role')">
                    <optgroup label="------------------">
                      <option name="pro" value="Administrator">Administrator</option>
                      <option name="pro" value="Sales Administrator">Sales Administrator</option>
                      <option name="pro" value="Sales">Sales</option>

                    </optgroup>
                  </select>
                </div>
                <div class="form-group">
                <button type="submit" class="btn btn-primary"><%= __('Submit') %></button>
              </div>
              </form>

            </div>
          </section>
        </div>
      </div>
    </div>
