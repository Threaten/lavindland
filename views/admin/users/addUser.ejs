<% layout('/admin/template') -%>
<title>Add new Staff</title>
<script type="text/javascript">

function updateText(type) {
 var id = type+'Text';
 document.getElementById(id).value = document.getElementById(type).value;
}
</script>
<div class="page-heading">
  <h3>
    <%= __('Add new Staff') %>
  </h3>
  <ul class="breadcrumb">
    <li>
      <a href="/admin">Dashboard</a>
    </li>
    <li>
      <a href="/admin/userList"><%= __('Users List') %></a>
    </li>
    <li class="active"> <%= __('Add new Staff') %> </li>
  </ul>
</div>
<div class="wrapper">
  <div class="row">
    <div class="col-lg-12">
      <section class="panel">
        <header class="panel-heading">
          <%= __('Add new Staff') %>
        </header>
        <div class="panel-body">
          <% if (msg.length > 0) { %>
            <div class="alert alert-success alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>

              <%= msg %>

            </div>
            <% } %>
            <% if (error.length > 0) { %>
              <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>

                <%= error %>

              </div>
              <% } %>
              <form method="post">
                <div class="form-group">
                  <label for="name"><%= __('Name') %></label>
                  <input type="text" class="form-control" id="name" name="name" placeholder="Nguyen Van A,..." required="true">
                </div>
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" id="email" name="email" placeholder="youremail@example.com" required="true">
                </div>
                <div class="form-group">
                  <label for="address"><%= __('Address') %></label>
                  <input type="text" class="form-control" id="address" name="address" placeholder="100 ABC Street..." required="true">
                <div class="form-group">
                  <label for="Phone"><%= __('Phone') %></label>
                  <input type="phone" class="form-control" id="phone" name="phone" placeholder="091xxxxxxx" required="true">
                </div>
                <div class="form-group">
                  <label for="password"><%= __('Password') %> <%= __('Default Password') %></label>
                  <input type="password" class="form-control" id="password" name="password" required="true">
                </div>
                <div class="form-group">
                  <label for="name"><%= __('Role') %></label>
                  <select class="form-control" data-style="btn-info" id="role" name="role" onchange="updateText('role')">
                    <optgroup label="------------------">
                      <% for (var i = 0; i < roles.length; i++) { %>
                      <option name="pro" value="<%= roles[i].role %>"><%= roles[i].role %></option>
                      <% } %>

                    </optgroup>
                  </select>
                </div>
                <div class="form-group">
                <button type="submit" class="btn btn-primary"><%= __('Submit') %></button>
              </div>
              </form>

            </div>
          </section>
        </div>
      </div>
    </div>
