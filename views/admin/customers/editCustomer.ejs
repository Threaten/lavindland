<% layout('/admin/template') -%>
<title>Edit Customer</title>
<div class="page-heading">
    <h3>
        <%= __('Edit Customer') %>
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="/admin">Dashboard</a>
        </li>
        <li>
            <a href="/admin/customerList"><%= __('Customers List') %></a>
        </li>
        <li class="active"><%= __('Edit Customer') %> </li>
    </ul>
</div>
<div class="wrapper">
<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
<%= __('Edit Customer') %>
      </header>
      <div class="panel-body">
        <% if (msg.length > 0) { %>
          <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>

            <%= msg %>

            </div>
            <% } %>
            <% if (error.length > 0) { %>
              <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>

                <%= error %>

                </div>
                <% } %>
            <form role="form" method="post">
              <div class="form-group">
                <label for="name"><%= __('Name') %></label>
                <input type="text" class="form-control" id="name" name="name" required value="<%= customer.name %>" placeholder="Nguyen Van A,...">
                <label for="address"><%= __('Address') %></label>
                <input type="text" class="form-control" id="address" name="address" required value="<%= customer.address %>" placeholder="208 Nguyen Huu Canh Street, Ward 22, Binh Thanh District, Ho Chi Minh City">
                <label for="phone"><%= __('Phone') %></label>
                <input type="text" class="form-control" id="phone" name="phone" required value="<%= customer.phone %>" placeholder="0901234567,...">
                <label for="email"><%= __('Email') %></label>
                <input type="email" class="form-control" id="email" name="email" required value="<%= customer.email %>" placeholder="youremail@example.com">
                <label for="dob"><%= __('Date of Birth') %></label>
                <input type="date" class="form-control" id="dob" name="dob" required value="<%= customer.dob.toISOString().slice(0,10) %>" placeholder="1/1/1990">
                <label for="potential"><%= __('Potential') %></label>
                <div id="potential">
                  <% if (customer.potential) { %>
                  <label><%= __('Yes') %></label> <input type="checkbox" checked id="havePotential" name="havePotential">
                  <label>             </label>
                  <label><%= __('No') %></label> <input type="checkbox" id="noPotential" name="noPotential">
                  <% } else { %>
                    <label><%= __('Yes') %></label> <input type="checkbox"  id="havePotential" name="havePotential">
                    <label>             </label>
                    <label><%= __('No') %></label> <input type="checkbox" checked id="noPotential" name="noPotential">
                  <% } %>
                </div>
              </div>
              <button type="submit" class="btn btn-primary"><%= __('Submit') %></button>
            </form>

          </div>
        </section>
      </div>
    </div>
  </div>
