<% layout('/admin/template') -%>
<title>Customers List</title>
<div class="page-heading">
    <h3>
      <%= __('Customers List') %>
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="/admin">Dashboard</a>
        </li>
        <li class="active"><%= __('Customers List') %> </li>
    </ul>
</div>
<div class="wrapper">

<div class="row">
<div class="col-sm-12">
<section class="panel">
<header class="panel-heading">
    <%= __('List') %>
    <span class="tools pull-right">
        <a href="javascript:;" class="fa fa-chevron-down"></a>
        <a href="javascript:;" class="fa fa-times"></a>
     </span>
</header>
<div class="panel-body">
  <div class="clearfix">
      <div class="btn-group">
          <a href="/admin/addCustomer" id="editable-sample_new" class="btn btn-primary">
              <%= __('Add new') %> <i class="fa fa-plus"></i>
          </a>
      </div>
    </div>
<div class="adv-table">
<table class="display table table-bordered" id="hidden-table-info4">
<thead>
<tr>
    <th><%= __('Name') %></th>
    <th><%= __('Address') %></th>
    <th class="hidden-phone"><%= __('Phone') %></th>
    <th class="hidden-phone">Email</th>
    <th class="hidden-phone"><%= __('Potential') %></th>
    <th class="hidden-phone"><%= __('Action') %></th>
    <th class="hidden-phone" style="display:none;">Date of Birth:</th>
    <th class="hidden-phone" style="display:none;">Notes:</th>
    <th class="hidden-phone" style="display:none;">Created At:</th>
    <th class="hidden-phone" style="display:none;">Updated At:</th>
    <th class="hidden-phone" style="display:none;">Added By:</th>
</tr>
</thead>
<tbody>
  <% for (var i = 0; i < customers.length; i++) { %>
<tr class="gradeA">
    <td><%= customers[i].name %></td>
    <td><%= customers[i].address %></td>
    <td class="hidden-phone"><%= customers[i].phone %></td>
    <td class="hidden-phone"><%= customers[i].email %></td>
    <% if (customers[i].potential) { %>
      <td class="center hidden-phone"><input type="checkbox" disabled="true" checked></td>
    <% } else { %>
      <td class="center hidden-phone"><input type="checkbox" disabled="true"></td>
    <% } %>
    <td class="hidden-phone">
      <ul class="notification-menu">
      <li>
          <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
          </a>
          <ul class="dropdown-menu dropdown-menu-usermenu pull-right">
    <li><a href="/admin/editCustomer/<%= customers[i]._id %>"><%= __('Edit') %></a></li>
    <li><a href="/admin/deleteCustomer/<%= customers[i]._id %>"><%= __('Delete') %></a></li>
  </ul>
</li>
</ul>
</td>
    <td class="center hidden-phone" style="display: none;"><%= customers[i].dob %></td>
    <td class="center hidden-phone" style="display: none;"><%= customers[i].note %></td>
    <td class="center hidden-phone" style="display: none;"><%= customers[i].createdAt %></td>
    <td class="center hidden-phone" style="display: none;"><%= customers[i].updatedAt %></td>
    <th class="hidden-phone" style="display:none;"><%= customers[i].addedBy.email %></th>
</tr>
<% } %>
</tbody>
</table>

</div>
</div>
</section>
</div>
</div>
</div>
