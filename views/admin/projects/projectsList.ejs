<% layout('/admin/template') -%>
<title>Projects List</title>
<div class="page-heading">
    <h3>
        <%= __('Projects List') %>
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="/admin">Dashboard</a>
        </li>
        <li class="active"><%= __('Projects List') %></li>
    </ul>
</div>
<div class="wrapper">

<div class="row">
<div class="col-sm-12">
<section class="panel">
<header class="panel-heading">
    <%= __('List') %>
    <span class="tools pull-right">
        <a href="javascript:;" class="fa fa-chevron-down"></a>
        <a href="javascript:;" class="fa fa-times"></a>
     </span>
</header>
<div class="panel-body">
  <div class="clearfix">
      <div class="btn-group">
          <a href="/admin/addProject" id="editable-sample_new" class="btn btn-primary">
            <%= __('Add new') %> <i class="fa fa-plus"></i>
          </a>
      </div>
    </div>
<div class="adv-table">
<table class="display table table-bordered" id="hidden-table-info3">
<thead>
<tr>
  <th class="hidden-phone"><%= __('Name') %></th>
  <th class="hidden-phone"><%= __('Address') %></th>
    <th class="hidden-phone"><%= __('Owner') %></th>
    <th class="hidden-phone"><%= __('Edit') %></th>
    <th class="hidden-phone"><%= __('Delete') %></th>
    <th class="hidden-phone" style="display:none;">Note</th>
</tr>
</thead>
<tbody>
  <% for (var i = 0; i < projects.length; i++) { %>
<tr class="gradeA">
    <td><%= projects[i].name %></td>
    <td><%= projects[i].address %></td>
    <td class="hidden-phone"><%= projects[i].owner %></td>
    <% if (user.role == "Administrator") { %>
      <td class="hidden-phone"><a href="/admin/editProject/<%= projects[i]._id %>"><%= __('Edit') %></a></td>
    <% } else { %>
      <td class="hidden-phone">N/A</td>
      <% } %>
      <% if (user.role == "Administrator") { %>
        <td class="hidden-phone"><a href="/admin/deleteProject/<%= projects[i]._id %>"><%= __('Delete') %></a></td>
        <% } else { %>
          <td class="hidden-phone">N/A</td>
        <% } %>
    <td class="center hidden-phone" style="display: none;"><%= projects[i].note %></td>
</tr>
<% } %>
</tbody>
</table>

</div>
</div>
</section>
</div>
</div>
</div>
