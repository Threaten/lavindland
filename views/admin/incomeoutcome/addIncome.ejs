                                <div class="form-group">
                                    <label class="control-label"><%= __('Content') %></label>
                                    <input type="text" id="content" name="content" required class="form-control" placeholder="Nguyen Van A">
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label"><%= __('Amount (VND)') %></label>
                                    <input type="number" id="amount" name="amount" required class="form-control" placeholder="">
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label"><%= __('Date') %></label>
                                    <input type="Date" id="date" name="date" class="form-control" onclick="maxDate()" placeholder="">
                                    <span class="help-block"><%= __('No Date') %></span>
                                </div>
                            </div>
                        </div>
                        <!--/row-->

                                        <div class="form-actions right">
                                            <a href="javascript:history.back()" class="btn default">Cancel</a>
                                            <button type="submit" class="btn blue">
