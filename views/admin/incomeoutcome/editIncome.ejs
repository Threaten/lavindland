<% layout('/admin/template') -%>
<title>Edit Income</title>
<div class="page-heading">
    <h3>
        <%= __('Edit Income') %>
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="/admin">Dashboard</a>
        </li>
        <li>
            <a href="/admin/projectList"><%= __('Finance') %></a>
        </li>
        <li class="active"><%= __('Edit Income') %> </li>
    </ul>
</div>
<div class="wrapper">
<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
<%= __('Edit Income') %>
      </header>
      <div class="panel-body">
        <% if (msg.length > 0) { %>
          <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>

            <%= msg %>

            </div>
            <% } %>
            <% if (error.length > 0) { %>
              <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>

                <%= error %>

                </div>
                <% } %>
            <form role="form" method="post">
              <div class="form-group">
                <label for="amount"><%= __('Amount') %></label>
                <input type="numbet" class="form-control" id="amount" required value="<%= income.amount %>" name="amount" placeholder="...VND">
                <label for="content"><%= __('Content') %></label>
                <input type="text" class="form-control" id="content" required value="<%= income.content %>" name="content" placeholder="Vingroup, Him Lam,...">
              </div>
              <button type="submit" class="btn btn-primary"><%= __('Submit') %></button>
            </form>

          </div>
        </section>
      </div>
    </div>
  </div>
