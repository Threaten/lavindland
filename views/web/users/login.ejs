<% layout('/web/template') -%>
<title>Login</title>
<!-- Content
============================================= -->
<section id="content">

  <div class="content-wrap">

    <div class="container clearfix">

      <div class="accordion accordion-lg divcenter nobottommargin clearfix" style="max-width: 550px;">

        <div class="acctitle"><i class="acc-closed icon-lock3"></i><i class="acc-open icon-unlock"></i>Login to your Account</div>
        <div class="acc_content clearfix">
          <% if (msg.length > 0) { %>
            <div class="alert alert-danger alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <%= msg %>
            </div>
              <% } %>
          <form id="login-form" name="login-form" class="nobottommargin" action="/login" method="post">
            <div class="col_full">
              <label for="email">Email:</label>
              <input type="text" id="email" name="email" value="" required class="form-control" />
            </div>

            <div class="col_full">
              <label for="password">Password:</label>
              <input type="password" id="password" name="password" value="" required class="form-control" />
            </div>

            <div class="col_full nobottommargin">
              <button class="button button-3d button-black nomargin" id="login-form-submit" name="login-form-submit" value="login">Login</button>
              <a href="#" class="fright">Forgot Password?</a>
            </div>
          </form>
        </div>

        <div class="acctitle"><i class="acc-closed icon-user4"></i><i class="acc-open icon-ok-sign"></i>New Signup? Register for an Account</div>
        <div class="acc_content clearfix">
          <form id="register-form" name="register-form" class="nobottommargin" action="/register" method="post">
            <div class="col_full">
              <label for="rName">Name:</label>
              <input type="text" id="rName" name="rName" value="" class="form-control" />
            </div>

            <div class="col_full">
              <label for="rEmail">Email Address:</label>
              <input type="text" id="rEmail" name="rEmail" value="" class="form-control" />
            </div>

            <div class="col_full">
              <label for="rAddress">Address:</label>
              <input type="text" id="rAddress" name="rAddress" value="" class="form-control" />
            </div>

            <div class="col_full">
              <label for="rPhone">Phone:</label>
              <input type="text" id="rPhone" name="rPhone" value="" class="form-control" />
            </div>

            <div class="col_full">
              <label for="rPassword">Choose Password:</label>
              <input type="password" id="rPassword" name="rPassword" value="" class="form-control" />
            </div>

            <div class="col_full">
              <label for="rPasswordConf">Re-enter Password:</label>
              <input type="password" id="rPasswordConf" name="rPasswordConf" value="" class="form-control" />
            </div>

            <div class="col_full nobottommargin">
              <button class="button button-3d button-black nomargin" id="register-form-submit" name="register-form-submit" value="register">Register Now</button>
            </div>
          </form>
        </div>

      </div>

    </div>

  </div>

</section><!-- #content end -->
