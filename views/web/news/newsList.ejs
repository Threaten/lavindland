								<div class="entry-image">
									<a href="/news/<%= news[i].id %>"><img class="image_fade" src="<%= news[i].thumb %>" alt="Standard Post with Image"></a>
								</div>
								<div class="entry-c">
									<div class="entry-title">
										<h2><a href="/news/<%= news[i].id %>"><%= news[i].title %></a></h2>
									</div>
									<ul class="entry-meta clearfix">
										<li><i class="icon-calendar3"></i> <%= news[i].updatedAt.toLocaleString() %></li>
										<li><a href="#"><i class="icon-user"></i><%= news[i].author %></a></li>
										<li><a href="blog-single.html#comments"><i class="icon-comments"></i> 13</a></li>
									</ul>
									<div class="entry-content">
										<p><%= news[i].shortDescription %></p>
										<a href="#"class="more-link">Read More</a>
									</div>
								</div>
							</div>
							<% } %>


